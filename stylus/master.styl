@import "nib"
@import "normalize.styl"

.main
	height 100%
	position relative
	width 100%

header.title
	padding 15em 0 1em
	h1
		color #fff
		cursor default
		font-size 6em
		margin 0
		text-align center
		div
			display inline-block
			overflow hidden
			vertical-align bottom
			transition: width 1s ease-in-out;
		div::first-letter
			color #0A7DFF


.background
	background-image url('../images/bg-temp.jpg')
	background-size cover
	height 100%
	left 0
	position absolute
	top 0
	width 100%
	z-index -1
	&:after
		content ''
		background-color rgba(0,0,0,.3)
		height 100%
		left 0
		position absolute
		top 0
		width 100%

.sociales
	background-color rgba(255,255,255,.8)
	border-radius 55px
	margin 0 auto
	padding 1.5em 1em
	text-align center
	width 15.5em
	figure
		display inline-block
		font-size 0
		margin 0 5px

@media screen and (max-width 640px)
	.background
		background-image url('../images/bg-temp.jpg')
		background-repeat no-repeat